@model IEnumerable<FitHub.Web.Models.CartItemViewModel>

@{
    ViewData["Title"] = "Cart";
    var items = Model.ToList();
    var total = items.Sum(i => i.Price * i.Quantity);
}

<h2>Your Cart</h2>

@if (!items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price (R)</th>
                <th>Quantity</th>
                <th>Subtotal (R)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in items)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Price</td>
                    <td>@i.Quantity</td>
                    <td>@(i.Price * i.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total:</th>
                <th>R @total</th>
            </tr>
        </tfoot>
    </table>

    <a class="btn btn-secondary" asp-controller="Products" asp-action="Index">Continue shopping</a>
    <a class="btn btn-success" asp-action="Checkout">Checkout</a>
}

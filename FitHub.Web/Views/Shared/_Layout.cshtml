<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitHub.Web</title>

    <!-- Bootstrap (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- (Optional) Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Your styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitHub.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- NAVBAR -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark shadow-sm">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill text-danger"></i>
                    <span class="fw-bold">FitHub</span>
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-center gap-lg-2">

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1 d-none d-md-inline"></i>Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Files" ? "active" : "")"
                               asp-controller="Files" asp-action="Index">
                                <i class="bi bi-images me-1 d-none d-md-inline"></i>Images
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Members" ? "active" : "")"
                               asp-controller="Members" asp-action="Index">
                                <i class="bi bi-people me-1 d-none d-md-inline"></i>Members
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Classes" ? "active" : "")"
                               asp-controller="Classes" asp-action="Index">
                                <i class="bi bi-collection me-1 d-none d-md-inline"></i>Classes
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Bookings" ? "active" : "")"
                               asp-controller="Bookings" asp-action="Create">
                                <i class="bi bi-calendar-check me-1 d-none d-md-inline"></i>Bookings
                            </a>
                        </li>

                        <!-- Sign in placeholder -->
                        @* --- Auth / Profile area --- *@
                        @if (!User.Identity?.IsAuthenticated ?? true)
                        {
                            <li class="nav-item ms-md-2">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-person-circle me-1"></i> Sign in
                                </a>
                            </li>
                        }
                        else
                        {
                            @* Admin link visible only to Admins *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")"
                                       asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock me-1 d-none d-md-inline"></i>Admin
                                    </a>
                                </li>
                            }

                            <li class="nav-item dropdown ms-md-2">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity!.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-item-text text-muted">
                                        Signed in as <strong>@User.Identity!.Name</strong>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger w-100">
                                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }


                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contracts" ? "active" : "")"
                               asp-controller="Contracts" asp-action="Index">
                                <i class="bi bi-file-earmark-text me-1 d-none d-md-inline"></i>Contracts
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")"
                               asp-controller="Products" asp-action="Index">
                                <i class="bi bi-bag me-1 d-none d-md-inline"></i>Shop
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cart" ? "active" : "")"
                               asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart me-1 d-none d-md-inline"></i>Cart
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MyOrders" ? "active" : "")"
                               asp-controller="Cart" asp-action="MyOrders">
                                <i class="bi bi-list-check me-1 d-none d-md-inline"></i>My Orders
                            </a>
                        </li>

                    </ul>
                </div><!-- /.navbar-collapse -->
            </div>
        </nav>
    </header>

    <!-- Toast (TempData["ok"]) -->
    <div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index:1080">
        @if (TempData["ok"] is string okMsg)
        {
            <div class="toast align-items-center text-bg-success border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-check-circle-fill me-2"></i>@okMsg
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <!-- Main -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top bg-dark text-white small">
        <div class="container py-3 d-flex justify-content-between align-items-center">
            <span>&copy; @DateTime.UtcNow.Year - FitHub.Web</span>
            <div>
                <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-white"><i class="bi bi-twitter-x"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
